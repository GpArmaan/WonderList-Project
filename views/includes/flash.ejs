<% if(success && success.length){%> <!--  bceause success is an array and if it is empty then also it shows it exists -->
    <div class="alert alert-success col-6 offset-3 alert-dismissible fade show d-flex justify-content-between align-items-center" role="alert">
        <%=success%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>

<% if(error && error.length){%> <!--  bceause success is an array and if it is empty then also it shows it exists -->
    <div class="alert alert-danger col-6 offset-3 alert-dismissible fade show d-flex justify-content-between align-items-center" role="alert">
        <%=error%>
        <button type="button" class="btn-close " data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>