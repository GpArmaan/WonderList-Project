<% layout("/layouts/boilerplate") %>
<body>
    <h3 class="mt-3 mb-3">Listing Details</h3>

    <div class="card listing-card">
        <div class="show-card row col-6 offset-3">
            <img src="<%=ListingDetails.image.url%>" class="card-img-top" alt="listing image">
            <div class="card-body">
                <p>Owned by - <%=ListingDetails.owner.username%></p>
                <p><b><%=ListingDetails.title%></b></p>
                <p><%=ListingDetails.description%></p>
                <p><%=ListingDetails.location%></p>
                <p>&#8377; <%=ListingDetails.price.toLocaleString("en-IN")%></p>
                <p><%=ListingDetails.country%></p>
            </div>
        </div>
    </div>

    <% if(currUser && currUser._id.equals(ListingDetails.owner._id)){%>  <!--to prevent the access of edit and delete for other users apart from owner-->
        <div class="show-btns">
            <button class="col-1 offset-3 edit-btn btn btn-dark"><a class="show-delete-btn" href="/listings/<%=ListingDetails._id%>/edit">Edit</a></button>
            <form method="post" action="/listings/<%=ListingDetails._id%>?_method=DELETE" class="col-1 delete-btn">
                <button class="btn btn-dark">Delete</a></button>
            </form>
        </div>
    <%}%>
    <br>
    <%if(currUser){%>
        <hr>
        <div class="review mb-4">
            <h4 class="mb-3">Leave a review</h4>
            <form action="/listings/<%=ListingDetails._id%>/reviews" method="POST" novalidate class="needs-validation">
                <div>
                    <label for="rating" class="form-label">Rate the listing</label>
                    <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="reviews[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="reviews[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="reviews[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="reviews[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="reviews[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="reviews[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>                    

                <div class="mb-3">
                    <label for="comment" class="form-label">Add a comment</label>
                    <textarea name="reviews[comments]" id="comment" class="form-control" rows="5" cols="30" required></textarea>
                    <div class="invalid-feedback">
                        Please type a review to submit
                    </div>
                </div>
                <button class="btn btn-outline-dark col-2 offset-5">Submit</button>
            </form>
        </div>
    <%}%>
    <hr>
    <h4>All Reviews</h4>
    <div class="row mt-3">
            <%for(review of ListingDetails.reviews){%>
                <div class="card col-3 ms-3 mb-3">
                    <div class="card-body">
                        <h5 class="reviewer-name"><%=review.author.username%></h5>
                        <p class="review-comment"><%=review.comments%></p>
                        <p class="review-rating" style="color: red;"><%=review.rating%> stars</p>
                        <p class="starability-result" data-rating="<%=review.rating%>"></p>
                    </div>
                    <form method="post" action="/listings/<%=ListingDetails._id%>/reviews/<%=review._id%>?_method=DELETE">
                        <button class="btn btn-dark mb-3 offset-4">Delete</button>
                    </form>
                </div>
            <%}%>

    </div>
</body>
